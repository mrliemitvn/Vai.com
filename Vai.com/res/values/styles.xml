<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VaiActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/bg_actionbar</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/bg_actionbar</item>
    </style>

    <style name="VaiActionBarButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">@dimen/abs__action_bar_default_height</item>
        <item name="android:paddingRight">@dimen/common_margin_small</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="homeAsUpIndicator">@drawable/new_home_as_up</item>
        <item name="android:homeAsUpIndicator">@drawable/new_home_as_up</item>
        <item name="android:actionBarStyle">@style/VaiActionBarStyle</item>
        <item name="android:actionButtonStyle">@style/VaiActionBarButtonStyle</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/VaiActionBarStyle</item>
        <item name="actionButtonStyle">@style/VaiActionBarButtonStyle</item>
    </style>

</resources>